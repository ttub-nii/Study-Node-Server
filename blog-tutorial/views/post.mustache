<!doctype html>
<html lang="en">
<head>
    <title>{{post.title}}</title>
    <meta name="description" content="{{post.preview}}" />

    <meta property="og:title" content="{{post.title}}" />
  	<meta property="og:type" content="article" />
  	<meta property="og:url" content="{{{url}}}" />
  	<meta property="og:image" content="{{{post.image}}}=s640-c" />
  	<meta property="og:image:width" content="640px" />
  	<meta property="og:image:height" content="640px" />
  	<meta property="og:description" content="{{post.preview}}" />

    {{>head}}
</head>


    <body>
        <div class="blog-post" id="vertex-container">

            {{>header}}

            <div class="container">
                <div class="row">
                    <div class="col-md-10 mx-auto col-sm-12 middle-section">
                        <div class="post-content py-md-5">
                            <h1 class="mt-4 text-center">{{post.title}}</h1>
                            <p class="font-sm text-center" style="font-size:16px">
                                <span style="text-transform:uppercase;" class="cat"><i class="far fa-image mr-2"></i>{{post.category}}</span> - {{post.dateString}}
                            </p>
                            <p class="mt-5 mb-4"><img class="img-fluid" src="{{{post.image}}}=s1080"/></p>
                            <div class="mt-5 post-text">{{{post.text}}}</div>
                        </div>

                        <div class="post-list pt-4" id="recent-posts"></div>

                    {{>footer}}

                    </div>
                </div>
            </div>
        </div>

        <script type="text/template" id="tpl-recent-post">
          <div class="row blog-box">
              <div class="col-md-6 col-sm-12 blog-img" style="background-image: url('<%{image}%>=s1080');">
                  <a href="/post/<%{slug}%>"></a>
              </div>
              <div class="col-md-6 col-sm-12 position-relative">
                  <div class="ml-4 blog-content">
                      <a href="/post/<%{slug}%>"><h3><% title %></h3></a>
                      <p class="font-sm">
                          <span style="text-transform:uppercase" class="cat"><i class="far fa-image mr-2"></i><% category %></span> - <% dateString %>
                      </p>
                      <p><% preview %></p>
                  </div>
              </div>
          </div>
        </script>

        {{>scripts}}
        
        <script type="text/javascript" src="{{{cdn}}}/js/mustache.min.js"></script>
        <script type="text/javascript" src="{{{cdn}}}/js/recent.js"></script>
    </body>
</html>
